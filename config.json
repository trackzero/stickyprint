{
  "_comment": "Example configuration for standalone Sticky Note Printer",
  "printer": {
    "auto_discover": true,
    "manual_ip": ""
  },
  "fonts": {
    "default_size": 48,
    "margin": 20,
    "line_spacing": 1.3,
    "size_small": 36,
    "size_normal": 48,
    "size_large": 64,
    "size_xlarge": 80
  },
  "calendar": {
    "default_entity": "calendar.family"
  },
  "discovery": {
    "timeout": 30
  },
  "homeassistant": {
    "url": "http://homeassistant.local:8123",
    "token": "your_long_lived_access_token_here"
  },
  "server": {
    "port": 8099
  }
}
